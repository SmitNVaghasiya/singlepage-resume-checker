# Server Configuration
NODE_ENV=production

# Python FastAPI Service (Render)
PYTHON_API_URL=https://your-python-api-url.onrender.com
PYTHON_API_TIMEOUT=120000

# Security
CORS_ORIGIN=https://your-frontend-url.vercel.app
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=pdf,doc,docx,txt

# MongoDB Configuration
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/resume_analyzer

# Logging
LOG_LEVEL=info
LOG_DIR=logs

# Performance
CLUSTER_WORKERS=0
COMPRESSION_LEVEL=6

# Authentication
JWT_SECRET=your-very-long-random-secret
JWT_EXPIRES_IN=30d
FRONTEND_URL=https://your-frontend-url.vercel.app

# Email Configuration (Gmail SMTP - Free)
EMAIL_USER=your-gmail-address@gmail.com
EMAIL_APP_PASSWORD=your-gmail-app-password
EMAIL_FROM="AI Resume Checker" <noreply@airesumechecker.com>

# Redis Configuration (optional, for caching and rate limiting)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=